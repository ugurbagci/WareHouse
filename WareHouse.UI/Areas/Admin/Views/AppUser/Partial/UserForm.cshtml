@model WareHouse.UI.Areas.Admin.Models.DTO.UserDTO

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Add User</h3>
    </div>
    <form action="/Admin/AppUser/AddUser" method="post" enctype="multipart/form-data" role="form">
        <div class="box-body">
            <div class="form-group">
                <label for="text">Firstname</label>
                <input type="text" name="FirstName" class="form-control" placeholder="Firstname">
                @Html.ValidationMessageFor(x => x.FirstName)
            </div>
            <div class="form-group">
                <label for="text">Lastname</label>
                <input type="text" name="LastName" class="form-control" placeholder="Lastname">
                @Html.ValidationMessageFor(x => x.LastName)
            </div>
            <div class="form-group">
                <label for="text">Username</label>
                <input type="text" name="UserName" class="form-control" placeholder="Username">
                @Html.ValidationMessageFor(x => x.UserName)
            </div>
            <div class="form-group">
                <label for="text">Email</label>
                <input type="email" name="Email" class="form-control" placeholder="Email">
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="form-group">
                <label for="text">Password</label>
                <input type="password" name="Password" class="form-control" placeholder="Password">
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div class="form-group">
                <label for="Role">Role</label>
                <select name="Role" class="form-control">
                    @foreach (var item in Enum.GetNames(typeof(WareHouse.Model.Enum.Role)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.Role)
            </div>
            <div class="form-group">
                <label for="Gender">Gender</label>
                <select name="Gender" class="form-control">
                    @foreach (var item in Enum.GetNames(typeof(WareHouse.Model.Enum.Gender)))
                    {
                        <option value="@item">@item</option>
                    }
                </select>
                @Html.ValidationMessageFor(x => x.Gender)
            </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Add User</button>
        </div>
    </form>
</div>
