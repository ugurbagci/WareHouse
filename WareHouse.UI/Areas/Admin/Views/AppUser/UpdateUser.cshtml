
@{
    ViewBag.Title = "UpdateUser";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model WareHouse.UI.Areas.Admin.Models.DTO.UserDTO

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add User</h3>
                </div>
                <form action="/Admin/AppUser/UpdateUser" method="post" enctype="multipart/form-data" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Firstname</label>
                            <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" placeholder="Firstname">
                        </div>
                        <div class="form-group">
                            <label for="text">Lastname</label>
                            <input type="text" name="LastName" value="@Model.LastName" class="form-control" placeholder="Lastname">
                        </div>
                        <div class="form-group">
                            <label for="text">Username</label>
                            <input type="text" name="UserName" value="@Model.UserName" class="form-control" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <label for="text">Email</label>
                            <input type="email" name="Email" value="@Model.Email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="text">Password</label>
                            <input type="password" name="Password" value="@Model.Password" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="Role">Role</label>
                            <select name="Role" class="form-control">
                                @foreach (var item in Enum.GetNames(typeof(WareHouse.Model.Enum.Role)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Gender">Gender</label>
                            <select name="Gender" class="form-control">
                                @foreach (var item in Enum.GetNames(typeof(WareHouse.Model.Enum.Gender)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Update User</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>