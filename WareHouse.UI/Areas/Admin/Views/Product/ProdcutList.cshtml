
@{
    ViewBag.Title = "ProdcutList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model List<WareHouse.UI.Areas.Admin.Models.DTO.ProductDTO>

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Product/AddProduct">Add Product</a></li>
        <li class="active">Product List</li>
    </ol>
</section>
<br />
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">

                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Category ID</th>
                                <th>Product Name</th>
                                <th>Product Description</th>
                                <th>Units InStock</th>
                                <th>Unit Price</th>
                                <th>Category Name</th>
                            </tr>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.CategoryID</td>
                                <td>@item.ProductName</td>
                                <td>@item.ProductDescription</td>
                                <td>@item.UnitsInStock</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.CategoryName</td>
                                <td><a href="/Admin/Product/UpdateProduct/@item.ID" type="button" class="btn btn-block btn-warning">Update</a></td>
                                <td><a href="/Admin/Product/DeleteProduct/@item.ID" type="button" class="btn btn-block btn-danger">Delete</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>